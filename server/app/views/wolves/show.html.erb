<table>
  <tr>
    <td>Status</td>
    <td>ID</td>
    <td>Key</td>
    <td>IP</td>
    <td>Current Agent</td>
    <td>Last lurk</td>
  </tr>
  <tr>
    <td>o</td>
    <td><%=@wolf.id%></td>
    <td><%=@wolf.instance_id%></td>
    <td><%=link_to @wolf.key, wolf_path(@wolf) %></td>
