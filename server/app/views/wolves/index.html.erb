
<%=link_to "Create new wolves", new_wolf_path, :class => ["btn", "btn-primary"] %>
<br/>

<table>
  <tr>
    <td>Status</td>
    <td>ID</td>
    <td>Key</td>
    <td>IP</td>
    <td>Current Agent</td>
    <td>Last lurk</td>
  </tr>
  <% @wolves.each do |wolf| %>
    <tr>
      <td>o</td>
      <td><%=wolf.id%></td>
      <td><%=link_to wolf.key, wolf_path(wolf) %></td>
      <td><%=wolf.ip_address%></td>
      <td><%=wolf.instance_id%></td>
      <td><%#=wolf.last_lurk%></td>
      <td><%#=wolf.current_agent %></td>
